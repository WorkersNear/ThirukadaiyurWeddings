                        <li>  சர்க்கரை, கல்கண்டு மற்றும் சாக்லேட்                      </li>
                        <li>  வெற்றிலை பாக்கு                                           </li>
                        <li>  சீர்வரிசைக்கு உள்ள தட்டு -7 மற்றும் அதற்கான பழங்கள்  </li>
                        <li>  தாம்பூல பை</li>

                    </ul>
                </div>


            </div>
        </div>

    </div>
</div>





<script>
    $(document).ready(function () {

    });

    function process() {
        var onlineBooking = new Object();
        onlineBooking.MrName = $("#mrname").val();
        onlineBooking.MrsName = $('#mrsname').val();
        onlineBooking.MrRasiandNakshatra = $('#mrRasi').val();
        onlineBooking.MrsRasiandNakshatra = $('#mrsRasi').val();
        onlineBooking.MobileNumber = $('#mob').val();
        onlineBooking.AlterneteMobile = $('#altermob').val();
        onlineBooking.FunctionDate = $('#fdate').val();
        onlineBooking.Location = $('#location').val();
        onlineBooking.TypeofAbishegam = $('#Abishegam :selected').text();
        onlineBooking.AbishegamDays = $('#days :selected').text();
        onlineBooking.Bhramin = $('#Bhramin :selected').text();
        onlineBooking.Food = "no";
        onlineBooking.Hotel = "no";
        onlineBooking.Photography = "no";
        onlineBooking.VideoCoverage = "no";

        if ($('#food').prop("checked") == true) {
            onlineBooking.Food = "Yes"
        }
        if ($('#Hotel').prop("checked") == true) {
            onlineBooking.Hotel = "Yes"
        }
        if ($('#Photography').prop("checked") == true) {
            onlineBooking.Photography = "Yes"
        }
        if ($('#Videocoverage').prop("checked") == true) {
            onlineBooking.VideoCoverage = "Yes"
        }

        if (onlineBooking.MobileNumber != null && onlineBooking.MobileNumber != "") {
            $.ajax({
                type: "POST",
                url: '@Url.Action("OnlineBooking", "Home")',
                data: JSON.stringify(onlineBooking),
                data: onlineBooking,
                //contentType: "application/json; charset=utf-8",
                //dataType: "json",
                success: function (response) {
                    if (response != null) {
                        location.href = "/Home/OnlineBookingconfirmation/";
                    } else {
                        location.href = "/Home/OnlineBookingconfirmation/";
                    }
                },
                failure: function (response) {
                    location.href = "/Home/OnlineBookingconfirmation/";
                },
                error: function (response) {
                    location.href = "/Home/OnlineBookingconfirmation/";

                }
            });
        }
        else {
            $('#warning').text("Error: Please mention the phone number atleast.then click again Book Now Button we will contact you!");
            return false;
        }

    }
</script>